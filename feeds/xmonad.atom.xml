                        , "--high", "green"
                        , "--low", "red"
                        ] 10
                    , Run Memory ["--template", "Mem: &lt;usedratio&gt;%"] 10
                    , Run Date "%a %Y-%m-%d %H:%M" "date" 10
                    , Run XMonadLog
                    ]
        , sepChar  = "%"
        , alignSep = "}{"
